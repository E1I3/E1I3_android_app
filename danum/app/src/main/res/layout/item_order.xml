<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical">
    <ImageView
        android:id="@+id/orderImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:background="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신선한\n야채가게"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/orderTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당근 저렴하게 팝니다."
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/orderPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계당 400원"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/orderQuantityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문 수량: 4개"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/orderPickupTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="픽업시간: 24.12.17 14:00"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <Button
        android:id="@+id/orderStatusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="대기 중"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:background="@drawable/button_transaction"
        android:backgroundTint="@android:color/holo_red_light" />
</LinearLayout>
